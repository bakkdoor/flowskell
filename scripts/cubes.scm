; stacked cube spiral
(define cube
  (lambda ()
    (scale 0.75 0.75 0.75)
    (make-cube)
    (rotate (* (cos (/ (msecs) 1000.0)) 45.0) 1.0 0.0 0.0)
    (translate 1.75 (* (sin (/ (msecs) 1000.0)) 0.2) 0.0)))
(define init
  (lambda ()
    (scale 0.25 0.25 0.25)
    (translate 0.0 -1.0 0.0)
    (rotate 90.0 0.0 0.0 1.0)
    (rotate 45.0 0.0 1.0 0.0)
    (rotate (modulo (/ (msecs) 10) 360) 1.0 0.0 0.0)))
(define every-frame
  (lambda ()
    (init)
    (cube)
    (cube)
    (cube)
    (cube)
    (cube)
    (cube)
    (cube)
    (cube)
    (cube)
    (cube)
    (cube)
  ))
