(define col
  (lambda (n r)
    (translate (* 1.5 r) (* 0.01 n) (* 0.05 r))
    (color (/ (sin (/ (secs) 10.0)) 1.0) (cos (/ r 12.0)) (- 0.3 (/ (sin (* (/ (secs) 8.0) n)) 3.0)))
    (scale 1.0 0.69 0.79)
    (push)
    (if (> n 3)
        (make-cube))
    (pop)
    (if (> n 0) (col (- n 1) r))
  )
)
(define row
  (lambda (n)
    (rotate (/ 360.0 15.0) 0.0 0.6 1.0)
    (push)
    (translate 0.2 (* 0.1 n) 0.1)
    (col n (* n (* 0.2 (sin (secs)))))
    (pop)
    (if (> n 0) (row (- n 1)))
  )
)
